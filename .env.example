# Copy this file to ".env" and adjust values as needed.
#
#   cp .env.example .env
#

# Host port for the demo site (nginx serves UI and proxies /api)
WEB_PORT=80

# Backend (FastAPI)
POSTGRES_DB=rentpro
POSTGRES_USER=rentpro
POSTGRES_PASSWORD=rentpro
RENTPRO_DATABASE_URL=postgresql+psycopg2://rentpro:rentpro@postgres:5432/rentpro
RENTPRO_UPLOAD_DIR=/data/uploads

# JWT signing secret (set a value; required by docker-compose)
RENTPRO_SECRET_KEY=change-me

# Optional auth settings
RENTPRO_JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
RENTPRO_COOKIE_SECURE=0
RENTPRO_COOKIE_SAMESITE=lax

# Optional: simple auth rate limiting (demo-friendly)
RENTPRO_RATE_LIMIT_ENABLED=0
RENTPRO_RATE_LIMIT_LOGIN_PER_MIN=120
RENTPRO_RATE_LIMIT_REFRESH_PER_MIN=240

# Optional: stricter validation on startup (recommended for demos/CI)
RENTPRO_STRICT_CONFIG=0

# Optional: observability/logging
RENTPRO_LOG_LEVEL=INFO
RENTPRO_JSON_LOGS=0
RENTPRO_LOG_REQUESTS=0

# Optional demo seed (1 enables seeding on startup)
RENTPRO_E2E_SEED=0
RENTPRO_E2E_PASSWORD=rentpro-e2e

# Frontend build-time API base URL (for nginx demo use /api)
REACT_APP_API_URL=/api

